{{!-- start:header --}}
<header id="shy640-header-section" class="sticky-banner">
  <div class="container">
    <div class="nav-header">
      <a href="#" class="js-shy640-nav-toggle shy640-nav-toggle dark"><i></i></a>
      <a href="/"><img src="./images/logo.jpg" alt="Being Care Foundation Logo!"
          style="filter: drop-shadow(6px 6px 4px rgb(63, 63, 63))" /></a>
      <nav id="shy640-menu-wrap" role="navigation">
        <ul class="sf-menu" id="shy640-primary-menu">
          <li id="home">
            <a href="/">Home</a>
          </li>
          <li id="">
            <a href="#" class="shy640-sub-ddown">Projects</a>
            <ul class="shy640-sub-menu">
              <li id="#"><a href="#">Animal Care</a></li>
              <li id=""><a href="#">Free FirstAid Program</a></li>
              <li id=""><a href="#">Water Care</a></li>
            </ul>
          </li>
          <li id="about"><a href="/about">About</a></li>
          <li id="blog"><a href="/blog">Blog</a></li>
          <li id="contact"><a href="/contact">Contact</a></li>
          {{#if isAuthenticated}}
          <li id="user-button" class="btn btn-grey btn-rounded my-3">
            <a href="#" class="shy640-sub-ddown">{{username}}</a>
            <ul class="shy640-sub-menu">
              <li id="dashboard"><a href="/dashboard">Dashboard</a></li>
              <li id="dashboard"><a href="/logout">Logout<i class="icon-signout"></i></a></li>
            </ul>
          </li>
          {{else}}
          <li id="join-button" class="btn btn-default btn-rounded my-3">
            <a href="#" class="shy640-sub-ddown">Join</a>
            <ul class="shy640-sub-menu">
              <li id="register-button"><a href="/register">Register</a></li>
              <li id="login-button"><a href="/login">Login</a></li>
            </ul>
          </li>
          {{/if}}
          <li>
            {{>darkmode}}
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
