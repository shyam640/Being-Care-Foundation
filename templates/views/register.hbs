         <main class="my-form">
            <div class="cotainer m-5">
               <div class="row justify-content-center">
                  <div class="col-md-8" style="font-size: 18px; border: 1px solid; padding: 10px;">
                     <div class="card-header">Register</div>
                     <div class="card-body">
                        <form action="/users/register" method="POST" class="modal-body mb-1"
                           style="height: fit-content;">

                           <i class="icon-user-tie prefix"></i>
                           <label data-error="wrong" data-success="right" for="full-name">Your Full Name</label>
                           <input name="name" type="text" id="full-name" class="form-control form-control-sm validate"
                              required>

                           <i class="icon-user prefix"></i>
                           <label data-error="wrong" data-success="right" for="username">Your Username</label>
                           <input name="username" type="text" id="username"
                              class="form-control form-control-sm validate" required>

                           <i class="icon-email prefix"></i>
                           <label data-error="wrong" data-success="right" for="user-email">Your Email</label>
                           <input name="email" type="email" id="user-email"
                              class="form-control form-control-sm validate" required>

                           <i class="icon-phone prefix"></i>
                           <label data-error="wrong" data-success="right" for="user-phone">Your Phone</label>
                           <input name="phone" type="tel" id="user-phone" class="form-control form-control-sm validate"
                              required>

                           <i class="icon-lock prefix"></i>
                           <label data-error="wrong" data-success="right" for="user-password">Your Password</label>
                           <input name="password" type="password" id="user-password"
                              class="form-control form-control-sm validate" required>

                           <i class="icon-lock prefix"></i>
                           <label data-error="wrong" data-success="right" for="modalLRInput15">Repeat
                              Password</label>
                           <input name="repeat-password" type="password" id="modalLRInput15"
                              class="form-control form-control-sm validate" required>

                           <button class="btn btn-primary" style="font-size: 16px; font-weight:500;" type="submit">Sign up <i
                                 class="icon-login ml-1"></i></button>
                        </form>
                        {{!-- Footer --}}
                        <div class="modal-footer">
                           <div style="display: flex;flex-direction:row" class="options text-center text-md-right mt-1">
