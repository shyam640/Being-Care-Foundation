<style>
   a {
      text-decoration: none;
   }

   .form-items {
      padding: 40px;
      display: inline-block;
      width: 100%;
      min-width: 540px;
      -webkit-border-radius: 10px;
      -moz-border-radius: 10px;
      border-radius: 10px;
      text-align: left;
      -webkit-transition: all 0.4s ease;
      transition: all 0.4s ease;
   }

   h3 {
      color: #fff;
      text-align: left;
      font-size: 28px;
      font-weight: 600;
      margin-bottom: 5px;
   }

   h3.form-title {
      margin-bottom: 30px;
   }

   p {
      color: #fff;
      text-align: left;
      font-size: 17px;
      font-weight: 300;
      line-height: 20px;
      margin-bottom: 30px;
   }


   label,
   .was-validated .form-check-input:invalid~.form-check-label,
   .was-validated .form-check-input:valid~.form-check-label {
      color: #fff;
   }

   input[type=text],
   select {
      width: 100%;
      padding: 9px 20px;
      text-align: left;
      border: 0;
      outline: 0;
      border-radius: 6px;
      background-color: #fff;
      font-size: 15px;
      font-weight: 300;
      color: #8D8D8D;
      -webkit-transition: all 0.3s ease;
      transition: all 0.3s ease;
      margin-top: 16px;
      border-color: #000000;
   }

   textarea {
      position: static !important;
      width: 100%;
      padding: 8px 20px;
      border-radius: 6px;
      text-align: left;
      background-color: #fff;
      border: 0;
      font-size: 15px;
      font-weight: 300;
      color: #8D8D8D;
      outline: none;
      resize: none;
      height: 120px;
      -webkit-transition: none;
      transition: none;
      margin-bottom: 14px;
   }

   textarea:hover,
   textarea:focus {
      border: 0;
      background-color: #ebeff8;
      color: #8D8D8D;
   }

   .mv-up {
      margin-top: -9px !important;
      margin-bottom: 8px !important;
   }

   .invalid-feedback {
      color: #ff606e;
   }

   .valid-feedback {
      color: #2acc80;
   }
</style>

<body>
   <div id="shy640-wrapper">
      <div id="shy640-page">
         {{#if success}}
         {{>successmsg}}
         {{/if}}
         {{#if error}}
         {{>errormsg}}
         {{/if}}
         <div class="header-top">
            <div class="container">
               <div class="row">
                  <div class="col-md-6 col-sm-6 text-left shy640-link">
                     <a href="/faq">FAQ</a>
                     <a href="#" onclick="commonMessage()">Forum</a>
                     <a href="#">Contact</a>
                  </div>
                  <div class="col-md-6 col-sm-6 text-right shy640-social">
                     <a href="#" class="grow"><i class="icon-facebook2"></i></a>
                     <a href="#" class="grow"><i class="icon-twitter2"></i></a>
                     <a href="#" class="grow"><i class="icon-instagram2"></i></a>
                     <a href="#" class="grow"><i class="icon-linkedin2"></i></a>
                  </div>
               </div>
            </div>
         </div>
         {{!-- start:header --}}
         <header id="shy640-header-section" class="sticky-banner">
            <div class="container">
               <div class="nav-header">
                  <a href="#" class="js-shy640-nav-toggle shy640-nav-toggle dark"><i></i></a>
                  <a href="/"><img src="./images/logo_icon.png" alt="Being Care Foundation Logo!"
                        style="filter: drop-shadow(6px 6px 4px rgb(63, 63, 63))" /></a>
                  <nav id="shy640-menu-wrap" role="navigation">
                     <ul class="sf-menu" id="shy640-primary-menu">
                        <li id="home">
                           <a href="/">Home</a>
                        </li>
                        <li id="">
                           <a href="#" class="shy640-sub-ddown">Projects</a>
                           <ul class="shy640-sub-menu">
                              <li id="#"><a href="#">Animal Care</a></li>
                              <li id=""><a href="#">Free FirstAid Program</a></li>
                              <li id=""><a href="#">Water Care</a></li>
                           </ul>
                        </li>
                        <li id="about"><a href="/about">About</a></li>
                        <li id="blog"><a href="/blog">Blog</a></li>
                        <li id="contact"><a href="/contact">Contact</a></li>
                        {{#if isAuthenticated}}
                        <li id="user-button" class="btn btn-grey btn-rounded my-3">
                           <a href="#" class="shy640-sub-ddown">{{username}}</a>
                           <ul class="shy640-sub-menu">
                              <li id="dashboard"><a href="/dashboard">Dashboard</a></li>
                              <li id="dashboard"><a href="/logout">Logout<i class="icon-signout"></i></a></li>
                           </ul>
                        </li>
                        {{else}}
                        <li id="join-button" class="btn btn-default btn-rounded my-3">
                           <a href="#" class="shy640-sub-ddown">Join</a>
                           <ul class="shy640-sub-menu">
                              <li id="register-button"><a href="/register">Register</a></li>
                              <li id="login-button"><a href="/login">Login</a></li>
                           </ul>
                        </li>
                        {{/if}}
                        <li>
                           {{>darkmode}}
                        </li>
                     </ul>
                  </nav>
               </div>
            </div>
         </header>
         {{!-- end:header --}}


         <div class="form-items" style="display:flex;justify-content:center;font-size:16px;">
            <label for="editor" style="font-size: 20px;">Editor</label>
            <br>
            <form class="requires-validation" action="" method="POST" novalidate>

               <div class="p-3">
                  <input class="form-control" style="font-size:16px;width:100rem;border:0.5px solid rgb(0, 0, 0);"
                     type="text" name="name" placeholder="Full Name" required>
                  <div class="valid-feedback">Username field is valid!</div>
                  <div class="invalid-feedback">Username field cannot be blank!</div>
               </div>

               <div class="p-3">
                  <input class="form-control" style="font-size:16px;border:0.5px solid rgb(0, 0, 0);" type="text"
                     name="title" placeholder="Title" required>
                  <div class="valid-feedback">Title is Valid!</div>
                  <div class="invalid-feedback">Please Fill Title!</div>
               </div>

               <div class="p-3">
                  <textarea class="form-control" style="font-size:16px;border:0.5px solid rgb(0, 0, 0);" rows="20"
                     type="text" name="content" placeholder="Enter Content" required></textarea>
                  <div class="valid-feedback">Valid Content!</div>
                  <div class="invalid-feedback">Please Fill Content Field!</div>
               </div>

               <div class="p-3">
                  <input class="form-control" style="font-size:16px;border:0.5px solid rgb(0, 0, 0);" type="file"
                     name="image" placeholder="Choose Image" required>
                  <div class="valid-feedback">Valid Image!</div>
                  <div class="invalid-feedback">Please Choose Image or Valid Image!</div>
               </div>

               <div class="form-button mt-3 p-3">
                  <button id="submit" style="font-size:16px;" type="submit" class="btn btn-primary">Register</button>
               </div>
            </form>
         </div>


         {{>footer}}
      </div>
   </div>


